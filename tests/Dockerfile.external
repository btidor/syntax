FROM ubuntu AS a
COPY nodesource.gpg /usr/share/keyrings/
COPY nodesource.list /etc/apt/sources.list.d/
ADD --apt nodejs

FROM debian AS b
COPY nodesource.gpg /usr/share/keyrings/
COPY nodesource.list /etc/apt/sources.list.d/
ADD --apt nodejs

FROM scratch
COPY --from=a / /ubuntu
COPY --from=b / /debian
